<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Base colors -->
    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="#FFFEFEFE"/>
    <SolidColorBrush x:Key="TextForegroundBrush" Color="#FF000000"/>
    <SolidColorBrush x:Key="TitleBarBackgroundBrush" Color="#FFFEFEFE"/>
    <SolidColorBrush x:Key="TitleBarForegroundBrush" Color="#FF000000"/>
    
    <!-- Control colors -->
    <SolidColorBrush x:Key="ControlBackgroundBrush" Color="#FFF5F5F5"/>
    <SolidColorBrush x:Key="ControlBorderBrush" Color="#FFAAAAAA"/>
    <SolidColorBrush x:Key="ControlForegroundBrush" Color="#FF000000"/>
    
    <!-- Button colors -->
    <SolidColorBrush x:Key="ButtonBackgroundBrush" Color="#FFF0F0F0"/>
    <SolidColorBrush x:Key="ButtonBorderBrush" Color="#FFADADAD"/>
    <SolidColorBrush x:Key="ButtonForegroundBrush" Color="#FF000000"/>
    <SolidColorBrush x:Key="ButtonHoverBackgroundBrush" Color="#FFE0E0E0"/>
    
    <!-- ListBox colors -->
    <SolidColorBrush x:Key="ListBoxBackgroundBrush" Color="#FFFFFFFF"/>
    <SolidColorBrush x:Key="ListBoxBorderBrush" Color="#FFCCCCCC"/>
    <SolidColorBrush x:Key="ListBoxItemSelectedBackgroundBrush" Color="#FF3399FF"/>
    <SolidColorBrush x:Key="ListBoxItemSelectedForegroundBrush" Color="#FFFFFFFF"/>
    
    <!-- CheckBox colors -->
    <SolidColorBrush x:Key="CheckBoxBackgroundBrush" Color="#FFFFFFFF"/>
    <SolidColorBrush x:Key="CheckBoxBorderBrush" Color="#FF707070"/>
    <SolidColorBrush x:Key="CheckBoxForegroundBrush" Color="#FF000000"/>
    
    <!-- ComboBox colors -->
    <SolidColorBrush x:Key="ComboBoxBackgroundBrush" Color="#FFFFFFFF"/>
    <SolidColorBrush x:Key="ComboBoxBorderBrush" Color="#FFABADB3"/>
    <SolidColorBrush x:Key="ComboBoxForegroundBrush" Color="#FF000000"/>
    
    <!-- Status bar colors -->
    <SolidColorBrush x:Key="StatusBarBackgroundBrush" Color="#FFD3D3D3"/>
    <SolidColorBrush x:Key="StatusBarForegroundBrush" Color="#FF000000"/>
</ResourceDictionary>
