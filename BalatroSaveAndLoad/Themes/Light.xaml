<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Base colors -->
    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="#FFFEFEFE"/>
    <SolidColorBrush x:Key="TextForegroundBrush" Color="#FF000000"/>
    <SolidColorBrush x:Key="TitleBarBackgroundBrush" Color="#FFFEFEFE"/>
    <SolidColorBrush x:Key="TitleBarForegroundBrush" Color="#FF000000"/>
    
    <!-- Control colors -->
    <SolidColorBrush x:Key="ControlBackgroundBrush" Color="#FFF5F5F5"/>
    <SolidColorBrush x:Key="ControlBorderBrush" Color="#FFAAAAAA"/>
    <SolidColorBrush x:Key="ControlForegroundBrush" Color="#FF000000"/>
    
    <!-- Button colors -->
    <SolidColorBrush x:Key="ButtonBackgroundBrush" Color="#FFF0F0F0"/>
    <SolidColorBrush x:Key="ButtonBorderBrush" Color="#FFADADAD"/>
    <SolidColorBrush x:Key="ButtonForegroundBrush" Color="#FF000000"/>
    <SolidColorBrush x:Key="ButtonHoverBackgroundBrush" Color="#FFE0E0E0"/>
    
    <!-- ListBox colors -->
    <SolidColorBrush x:Key="ListBoxBackgroundBrush" Color="#FFFFFFFF"/>
    <SolidColorBrush x:Key="ListBoxBorderBrush" Color="#FFCCCCCC"/>
    <SolidColorBrush x:Key="ListBoxItemSelectedBackgroundBrush" Color="#FF3399FF"/>
    <SolidColorBrush x:Key="ListBoxItemSelectedForegroundBrush" Color="#FFFFFFFF"/>
    
    <!-- CheckBox colors -->
    <SolidColorBrush x:Key="CheckBoxBackgroundBrush" Color="#FFFFFFFF"/>
    <SolidColorBrush x:Key="CheckBoxBorderBrush" Color="#FF707070"/>
    <SolidColorBrush x:Key="CheckBoxForegroundBrush" Color="#FF000000"/>
    
    <!-- ComboBox colors -->
    <SolidColorBrush x:Key="ComboBoxBackgroundBrush" Color="#FFFFFFFF"/>
    <SolidColorBrush x:Key="ComboBoxBorderBrush" Color="#FFABADB3"/>
    <SolidColorBrush x:Key="ComboBoxForegroundBrush" Color="#FF000000"/>
    
    <!-- Status bar colors -->
    <SolidColorBrush x:Key="StatusBarBackgroundBrush" Color="#FFD3D3D3"/>
    <SolidColorBrush x:Key="StatusBarForegroundBrush" Color="#FF000000"/>
    
    <!-- Themed Button Style -->
    <Style x:Key="ThemedButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="{DynamicResource ButtonBackgroundBrush}"/>
        <Setter Property="Foreground" Value="{DynamicResource ButtonForegroundBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource ButtonBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="4,2"/>
        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="2">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="{DynamicResource ButtonHoverBackgroundBrush}"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="{DynamicResource ButtonBorderBrush}"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Foreground" Value="#FFAAAAAA"/>
                            <Setter Property="Background" Value="#FFE0E0E0"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Themed ComboBox Style -->
    <Style x:Key="ThemedComboBoxStyle" TargetType="ComboBox">
        <Setter Property="Background" Value="{DynamicResource ComboBoxBackgroundBrush}"/>
        <Setter Property="Foreground" Value="{DynamicResource ComboBoxForegroundBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource ComboBoxBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="6,3,5,3"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ComboBox">
                    <Border x:Name="Border" 
                            SnapsToDevicePixels="true" 
                            Background="{TemplateBinding Background}" 
                            BorderBrush="{TemplateBinding BorderBrush}" 
                            BorderThickness="{TemplateBinding BorderThickness}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" MinWidth="20" />
                            </Grid.ColumnDefinitions>
                            
                            <!-- ContentPresenter for non-editable ComboBox -->
                            <ContentPresenter 
                                x:Name="ContentPresenter" 
                                Content="{TemplateBinding SelectionBoxItem}"
                                ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                Margin="{TemplateBinding Padding}"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Left"
                                Grid.Column="0"
                                IsHitTestVisible="False"
                                Visibility="Visible" />
                                
                            <!-- TextBox for editable ComboBox -->
                            <TextBox 
                                x:Name="PART_EditableTextBox"
                                Margin="{TemplateBinding Padding}"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Stretch"
                                Foreground="{TemplateBinding Foreground}"
                                Background="Transparent"
                                BorderThickness="0"
                                Visibility="Hidden"
                                IsReadOnly="{TemplateBinding IsReadOnly}"
                                Grid.Column="0" />
                                
                            <!-- Toggle button with arrow -->
                            <ToggleButton 
                                Grid.Column="1"
                                IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                Focusable="False"
                                ClickMode="Press">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Border Background="Transparent" Width="20">
                                            <Path x:Name="Arrow"
                                                  HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"
                                                  Data="M 0 0 L 4 4 L 8 0 Z"
                                                  Fill="{DynamicResource ComboBoxForegroundBrush}"
                                                  Width="8" Height="5"/>
                                        </Border>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>
                            
                            <!-- Popup for items -->
                            <Popup 
                                IsOpen="{TemplateBinding IsDropDownOpen}" 
                                Placement="Bottom"
                                PopupAnimation="Slide"
                                AllowsTransparency="True" 
                                Focusable="False">
                                <Border 
                                    BorderThickness="1"
                                    BorderBrush="{DynamicResource ComboBoxBorderBrush}"
                                    Background="{DynamicResource ComboBoxBackgroundBrush}"
                                    MaxHeight="200">
                                    <ScrollViewer SnapsToDevicePixels="True">
                                        <ItemsPresenter KeyboardNavigation.DirectionalNavigation="Contained" />
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <!-- Switch between ContentPresenter and TextBox based on IsEditable -->
                        <Trigger Property="IsEditable" Value="True">
                            <Setter Property="Visibility" TargetName="ContentPresenter" Value="Hidden" />
                            <Setter Property="Visibility" TargetName="PART_EditableTextBox" Value="Visible" />
                        </Trigger>
                        
                        <!-- Disabled state -->
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Foreground" Value="#FFAAAAAA"/>
                            <Setter Property="Background" Value="#FFE0E0E0"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
