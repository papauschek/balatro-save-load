<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Base colors -->
    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="#FF1E1E1E"/>
    <SolidColorBrush x:Key="TextForegroundBrush" Color="#FFE8E8E8"/>
    <SolidColorBrush x:Key="TitleBarBackgroundBrush" Color="#FF232323"/>
    <SolidColorBrush x:Key="TitleBarForegroundBrush" Color="#FFE8E8E8"/>
    
    <!-- Control colors -->
    <SolidColorBrush x:Key="ControlBackgroundBrush" Color="#FF2D2D30"/>
    <SolidColorBrush x:Key="ControlBorderBrush" Color="#FF3F3F46"/>
    <SolidColorBrush x:Key="ControlForegroundBrush" Color="#FFE8E8E8"/>
    
    <!-- Button colors -->
    <SolidColorBrush x:Key="ButtonBackgroundBrush" Color="#FF3E3E42"/>
    <SolidColorBrush x:Key="ButtonBorderBrush" Color="#FF555555"/>
    <SolidColorBrush x:Key="ButtonForegroundBrush" Color="#FFE8E8E8"/>
    <SolidColorBrush x:Key="ButtonHoverBackgroundBrush" Color="#FF505050"/>
    
    <!-- ListBox colors -->
    <SolidColorBrush x:Key="ListBoxBackgroundBrush" Color="#FF252526"/>
    <SolidColorBrush x:Key="ListBoxBorderBrush" Color="#FF3F3F46"/>
    <SolidColorBrush x:Key="ListBoxItemSelectedBackgroundBrush" Color="#FF0E639C"/>
    <SolidColorBrush x:Key="ListBoxItemSelectedForegroundBrush" Color="#FFFFFFFF"/>
    
    <!-- CheckBox colors -->
    <SolidColorBrush x:Key="CheckBoxBackgroundBrush" Color="#FF333337"/>
    <SolidColorBrush x:Key="CheckBoxBorderBrush" Color="#FF555555"/>
    <SolidColorBrush x:Key="CheckBoxForegroundBrush" Color="#FFE8E8E8"/>
    
    <!-- ComboBox colors -->
    <SolidColorBrush x:Key="ComboBoxBackgroundBrush" Color="#FF333337"/>
    <SolidColorBrush x:Key="ComboBoxBorderBrush" Color="#FF3F3F46"/>
    <SolidColorBrush x:Key="ComboBoxForegroundBrush" Color="#FFE8E8E8"/>
    
    <!-- Status bar colors -->
    <SolidColorBrush x:Key="StatusBarBackgroundBrush" Color="#FF232323"/>
    <SolidColorBrush x:Key="StatusBarForegroundBrush" Color="#FFE8E8E8"/>
</ResourceDictionary>
